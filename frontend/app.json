{
  "expo": {
    "name": "CareerFlow:Application Tracker",
    "slug": "careerflow",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "careerflow",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vsseshadri.careerflow",
      "usesAppleSignIn": true,
      "buildNumber": "1",
      "icon": "./assets/images/icon.png",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSUserTrackingUsageDescription": "Track your job applications and progress",
        "NSCalendarsUsageDescription": "Schedule reminders for job follow-ups",
        "NSPhotoLibraryUsageDescription": "Select a profile photo from your library",
        "NSCameraUsageDescription": "Take a profile photo",
        "NSFaceIDUsageDescription": "Use Face ID to login securely",
        "ITSAppUsesNonExemptEncryption": false,
        "CFBundleDisplayName": "CareerFlow"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#007AFF"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.vsseshadri.careerflow",
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#007AFF"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#007AFF",
          "sounds": []
        }
      ],
      "expo-font",
      [
        "expo-calendar",
        {
          "calendarPermission": "Allow CareerFlow to access your calendar to add interview events"
        }
      ],
      "@react-native-community/datetimepicker",
      "expo-apple-authentication",
      "expo-document-picker"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "appName": "CareerFlow",
      "EXPO_PUBLIC_BACKEND_URL": "https://apptracker-19.preview.emergentagent.com"
    }
  }
}
